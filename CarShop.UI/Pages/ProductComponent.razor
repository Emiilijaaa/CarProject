﻿<section class="d-flex flex-wrap md-3">
    <div class="card" style="width: 18rem;">
                <img src="@Car.PictureURL" class="img-fluid start" alt="...">
        <div class="card-body">
        <h5 class="card-title">@Car.Brand.Name</h5>
        <p class="card-text">@Car.Description</p>
            <a href="#" class="btn btn-dark">Köp nu</a>

            </div>
            <div class="">
            <div class=" row card-footer g-0">
                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio1-@Car.Id" autocomplete="off" checked>
                    <label class="btn btn-outline-primary btn-radio" for="btnradio1-@Car.Id">Ny</label>

                    <input type="radio" class="btn-check" name="btnradio" id="btnradio2-@Car.Id" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnradio2-@Car.Id">Begagnat</label>

                    <input type="radio" class="btn-check" name="btnradio" id="btnradio3-@Car.Id" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnradio3-@Car.Id">Gammal</label>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public CarGetDTO Car { get; set; }
}
